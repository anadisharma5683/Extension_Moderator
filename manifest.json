{
  "manifest_version": 3,
  "name": "Clean Web Filter",
  "version": "1.0",
  "description": "Censors abusive words across the web",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
